<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <img src="/TS-Logo.png" style="background-size:cover; align-items:center; width:30px; height:30px" alt="..." />
        <br />
        <a class="navbar-brand" style="color:#0974f1" href="">Tecnology Store App</a>
        
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Inicio
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Productos" Match="NavLinkMatch.All">
                <span class="oi oi-cart" aria-hidden="true"></span> Productos
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="OfertasRapidas" Match="NavLinkMatch.All">
                <span class="oi oi-cart" aria-hidden="true"></span> Ofertas Rapidas
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Contacto" Match="NavLinkMatch.All">
                <span class="oi oi-phone" aria-hidden="true"></span> Contactos
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
